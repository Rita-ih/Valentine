    <script>
        let currentStep = 0;
        const steps = document.querySelectorAll('.step');

        function nextStep() {
            saveResponse('step_' + currentStep, 'next');
            currentStep++;
            updateDisplay();
        }

        function answerYes() {
            saveResponse('valentine_answer', 'YES! üíû');
            currentStep++;
            updateDisplay();
            triggerConfetti();
        }

        function answerMaybe() {
            saveResponse('valentine_answer', 'Maybe ü§î');
            currentStep++;
            updateDisplay();
        }

        function answerLater() {
            saveResponse('valentine_answer', 'Not yet ‚è∞');
            currentStep++;
            updateDisplay();
        }

        function updateDisplay() {
            steps.forEach(step => step.classList.remove('active'));
            if (currentStep < steps.length) {
                steps[currentStep].classList.add('active');
            }
        }

        function saveResponse(key, value) {
            const timestamp = new Date().toLocaleString();
            localStorage.setItem(key, JSON.stringify({ value, timestamp }));
            console.log(`üìù Response saved: ${key} = ${value}`);
        }

        function triggerConfetti() {
            // Simple confetti effect
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.style.position = 'fixed';
                confetti.style.width = '10px';
                confetti.style.height = '10px';
                confetti.style.backgroundColor = ['#00f0ff', '#ff006e', '#39ff14'][Math.floor(Math.random() * 3)];
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-10px';
                confetti.style.borderRadius = '50%';
                confetti.style.pointerEvents = 'none';
                confetti.style.animation = `fall ${2 + Math.random() * 2}s linear forwards`;
                document.body.appendChild(confetti);
                
                setTimeout(() => confetti.remove(), 4000);
            }
        }

        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                to {
                    transform: translateY(100vh) rotate(360deg);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);

        // Log all responses
        console.log('%cüíï Valentine Responses Stored in localStorage', 'color: #00f0ff; font-size: 16px; font-weight: bold');
    </script>
